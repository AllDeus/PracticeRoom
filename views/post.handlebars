  <header id="main-header" class="py-2 bg-dark text-white">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1>
            Post {{id}}</h1>
        </div>
      </div>
    </div>
  </header>




<div class="d-flex flex-column">
  <h2 class="card-title">{{title}}</h2>
  <p>{{{content}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.displayName}} on {{format_date date_created}}</p>
</div>
<br>
{{!-- comments partial, will only render if comments exist --}}
{{> comment}}

<div class="col-md-6 d-inline-flex p-2">
  <form class="form new-comment-form">
    <div class="form-group d-flex flex-column">
      <label for="comment-content"> Add a comment: </label>
      <textarea class="form-input" id="comment-content" post_id={{id}} user_name={{user.displayName}}
        name="comment-content"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>

<script src="/js/post.js"></script>
<script src="/js/comment.js"></script>










