`<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{content}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.displayName}} on {{format_date date_created}}</p>
</div>
<br>
{{!-- comments partial, will only render if comments exist --}}
{{> comment}}

<div class="col-md-6">
  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment-content">Add a comment:</label>
      <textarea class="form-input" id="comment-content" post_id={{id}} user_name={{user.name}}
        name="comment-content"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>

